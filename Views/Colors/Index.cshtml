@model IEnumerable<fptshop1.Models.Color>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MÀU SẮC </h2>


<table class="table">
    <tr>
        <th>
            TÊN MÀU
        </th>
        <th>
            MÃ MÀU
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RGB)
            <span style="background-color:@Url.Content(item.RGB);color:#b8a7a700">|      |</span>
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ColorID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ColorID })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>