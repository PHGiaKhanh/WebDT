@model fptshop1.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ĐƠN HÀNG</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            MÃ ĐƠN HÀNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderID)
        </dd>
        <dt>
            NGÀY ĐẶT HÀNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            ĐỊA CHỈ GIAO HÀNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressDeliverry)
        </dd>

        <dt>
            TỔNG TIỀN
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalValue)
        </dd>

        <dt>
            TÊN KHÁCH HÀNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CusName)
        </dd>
        <dt>
            SỐ ĐIỆN THOẠI KHÁCH HÀNG
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CusPhone)
        </dd>

    </dl>


    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="CHI TIẾT  " class="btn btn-default" />
        @Html.ActionLink("Danh sách", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>
