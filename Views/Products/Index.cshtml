@model IEnumerable<fptshop1.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> SẢN PHẨM</h1>


<table class="table">
    <tr>
        <th> Tên Sản phẩm </th>
        <th> Đơn giá </th>
        <th> Ngày thêm </th>
        <th> Hình </th>
        <th> Loại Sản phẩm </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <br />
                <img src="~/Content/images/@item.ProImage" width="60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProID }) |
                @Html.ActionLink("Chi tiết ", "Details", new { id = item.ProID }) |
                @Html.ActionLink("Xóa ", "Delete", new { id = item.ProID })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
