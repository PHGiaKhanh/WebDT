                </ul>
            </div>

            <div class="san-pham">
                <div class="san-pham-cate">
                    @foreach (var pro in Model)
                    {
                        <a class="btn btn-info" href="~/ProDetails/DetailsCus/@pro.ProID">
                            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                                <div class="card-pro">

                                    <img src="~/Content/images/@pro.ProImage" style=" width: 200px; height: 300px; object-fit: contain; border-radius: 2px;" />
                                    <h3 style="font-size: 20px">@Html.DisplayFor(model => pro.ProName)</h3>
                                    <p style="color: #cd1818; font-size: 22px; font-weight: bold;margin:7px 0 1px 0">@Html.DisplayFor(model => pro.Price)</p>
                                    <p style="text-align:right;color:dimgray;margin-bottom:1px">4.000.000 đ/tháng</p>
                                    <img src="~/Image/Category/zalopay.png" style=" width: 45px; border-radius: 100%" />
                                    <p style="padding-top:10px;color:#444444;font-size:10px">
                                        Giảm 200.000đ qua ZaloPay-QR
                                    </p>
                                    <button>
                                        <a href="/ShoppingCart/AddToCart/@pro.ProID" style="color:white"> MUA NGAY </a>
                                    </button>


                                </div>
                            </div>
                        </a>
                    }
                </div>


