@model IEnumerable<fptshop1.Models.ProDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QUẢN LÝ SẢN PHẨM </h2>


<table class="table">
    <tr>
        <th>LƯỢNG SẢN PHẨM CÒN LẠI </th>
        <th>LƯỢNG SẢN PHẨM BÁN RA</th>
        <th>LƯỢT XEM  </th>
        <th> MÀU SẮC </th>
        <th> SẢN PHẨM</th>
        <th> NHÀ CUNG CẤP </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RemainQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupName)
            </td>
            <td>
                @Html.ActionLink("Sửa ", "Edit", new { id = item.ProDeID }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.ProDeID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProDeID })
            </td>
        </tr>

    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>

