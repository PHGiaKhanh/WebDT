@model IEnumerable<fptshop1.Models.Supplier>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NHÀ CUNG CẤP </h2>

<table class="table">
    <tr>
        <th>
            Nhà cung cấp
        </th>
        <th>
            Địa Chỉ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.SupID }) |
                @Html.ActionLink("Xóa ", "Delete", new { id = item.SupID }) 
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
